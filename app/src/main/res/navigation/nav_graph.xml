<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ContactScreen">

    <fragment
        android:id="@+id/ContactScreen"
        android:name="com.example.page_android_junior.routes.ContactsScreenFragment"
        tools:layout="@layout/contact_screeen_fragment">

        <action
            android:id="@+id/action_ContactScreen_to_ContactDetails"
            app:destination="@id/ContactDetails"
            app:popUpTo="@id/ContactScreen" />
    </fragment>
    <fragment
        android:id="@+id/ContactDetails"
        android:name="com.example.page_android_junior.routes.ContactDetailsFragment"
        tools:layout="@layout/contact_details_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/ContactScreen" />
        <argument
            android:name="user"
            app:argType="com.example.page_android_junior.models.User" />
    </fragment>
</navigation>